div.item
  img(
    :src="item.image",
    :alt="item.name"
  )
  span.quantity
    | {{ item.quantity }}
  button.buy(
    @click="$emit('buy')"
  )
  span.price
    | {{ $amount(item.price) }}
  div.itemUpgrades
    img.buyItemUpgrade(
      v-for="upgrade in availableItemUpgrades",
      @click="$emit('buyItemUpgrade', item, upgrade)",
      :title="upgradePrice(item, upgrade)",
      :src="item.upgradeImage"
    )
